# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=EcoEats
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MySQL Connection
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=ecoeats
DB_USERNAME=ecoeats_app
DB_PASSWORD=change_me_app_password

# MySQL Root Credentials (for migrations and admin tasks)
DB_ROOT_PASSWORD=change_me_root_password

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# =============================================================================
# BROADCAST CONFIGURATION
# =============================================================================
BROADCAST_CONNECTION=log

# =============================================================================
# FILESYSTEM CONFIGURATION (MinIO/S3)
# =============================================================================
FILESYSTEM_DISK=s3

# MinIO/S3 Configuration
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=ecoeats
AWS_ENDPOINT=http://minio:9000
AWS_URL=http://localhost:9000
AWS_USE_PATH_STYLE_ENDPOINT=true

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================
QUEUE_CONNECTION=redis

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_STORE=redis
# CACHE_PREFIX=

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@ecoeats.local"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# SANCTUM CONFIGURATION
# =============================================================================
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1

# =============================================================================
# HORIZON CONFIGURATION
# =============================================================================
HORIZON_PREFIX=ecoeats

# =============================================================================
# PULSE CONFIGURATION
# =============================================================================
# Pulse configuration is handled in config/pulse.php

# =============================================================================
# VITE CONFIGURATION
# =============================================================================
VITE_APP_NAME="${APP_NAME}"
